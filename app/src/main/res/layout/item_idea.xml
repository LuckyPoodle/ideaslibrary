<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ideaitemLayout"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/share"
            android:layout_gravity="bottom|end"
            app:srcCompat="@drawable/shareicon"
            android:paddingRight="5dp"/>

    <ImageView
        android:id="@+id/editicon"
        android:layout_gravity="bottom|end"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingRight="5dp"

        app:srcCompat="@drawable/editicon" />
    <ImageView
        android:id="@+id/favStar"
        android:layout_gravity="bottom|end"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/blankstar" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <ImageView
                android:id="@+id/ideaImage"
                android:visibility="gone"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="3"
                android:padding="4dp"
                android:scaleType="center"
                android:src="@mipmap/ic_launcher"
                 />


        <TextView
            android:id="@+id/timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="date" />

        <TextView
            android:id="@+id/locationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="location" />

        <TextView
            android:id="@+id/problem"
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif-medium"
            android:text="Problemmmm" />

        <TextView
            android:id="@+id/thought"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="sans-serif-condensed"
            android:text="my thoughtsssss " />




    </LinearLayout>



</androidx.cardview.widget.CardView>